DEBUG=1
SECRET_KEY=django-insecure-test-secret-key-for-dev-only
ALLOWED_HOSTS=127.0.0.1,localhost
DATABASE_NAME=db.sqlite3

YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Карты / регион
REGION_PROFILE=RU
MAP_PROVIDER=yandex
YANDEX_MAP_API_KEY=

# Старый токен Mapbox (если будешь использовать где-то ещё)
MAPBOX_TOKEN=your_actual_token_here

# OpenAI
OPENAI_API_KEY=sk...
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

LLM_CLIENT_TIMEOUT=8
LLM_CLIENT_RETRIES=2

# (опционально) Явный URL сервиса, если хочешь переопределить:
# LLM_SERVICE_URL=http://llm_service:8002
# DJANGO SETTINGS MODULE (ДОБАВЬТЕ ЭТУ СТРОЧКУ!)
DJANGO_SETTINGS_MODULE=backend.backend.settings.local

# LLM Gateway
LLM_PORT=8002
LLM_DEFAULT_MODEL=gpt-4o-mini
LLM_FALLBACK_MODELS=["gpt-4o-mini"]
LLM_CACHE_ENABLED=true
LLM_CACHE_URL=redis://localhost:6379/1
LLM_CACHE_TTL_SECONDS=30
LLM_REQUESTS_PER_MINUTE=60
LLM_RATE_LIMIT=100/hour

# Anthropic/Groq (используются через LiteLLM как резерв)
LLM_ANTHROPIC_API_KEY=
LLM_GROQ_API_KEY=

# Redis & Celery (ДОБАВЬТЕ ЭТИ СТРОЧКИ)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Database URL для совместимости
DATABASE_URL=sqlite:///db.sqlite3
